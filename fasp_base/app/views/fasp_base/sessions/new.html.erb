<h1 class="text-xl font-bold mb-4"><%=t ".log_in" %></h1>

<%= form_with url: fasp_base.session_path do |form| %>
  <div class="flex flex-col">
    <%= form.label :email %>
    <%= form.email_field :email, required: true, autofocus: true %>

    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div class="my-4">
    <%= form.button t(".log_in"), class: "bg-blue-400 text-white font-bold rounded px-4 py-2" %>
  </div>
<% end %>
