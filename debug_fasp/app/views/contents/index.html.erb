<%= render_tabs ApplicationHelper::DATA_SHARING_TABS, active: :contents, scope: "data_sharing.tabs" %>

<div class="flex justify-between items-center">
  <%= page_header do %>
    <%= t(".contents") %>
  <% end %>
  <%= button_link_to t(".destroy_all"), contents_path, data: {turbo_confirm: t('are_you_sure'), turbo_method: :delete} %>
</div>

<table>
  <thead>
    <tr>
      <th><%= Content.human_attribute_name(:uri) %></th>
      <th><%= Content.human_attribute_name(:object_type) %></th>
      <th><%= Content.human_attribute_name(:created_at) %></th>
      <th><%= Content.human_attribute_name(:updated_at) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
      <tr class="even:bg-blue-50">
        <%= td do %><%= content.uri %><% end %>
        <%= td do %><%= content.object_type %><% end %>
        <%= td do %><%= content.created_at %><% end %>
        <%= td do %><%= content.updated_at %><% end %>
        <%= td do %>
          <%= action_link_to t(".show"), content_path(content) %>
          <%= action_link_to t(".destroy"), content_path(content), data: {turbo_method: :delete} %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
